<% include partials/header %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="container  mt-4">
  <h5>Your Profile</h5>

  <div class="col-lg-12 row mt-4">
    <div class="col-lg-3 card text-center">
      <img src="<%= info.avatar_url%>" class="m-2 p-1" style="width: 210px; border: 2px solid crimson; border-radius:50%;" alt="">
      <p>@<%= info.login %></p>
      <p><%=user.email%></p>
      <p><%=user.phone%></p>
      <p><%=user.college%></p>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-8 card text-center">
      <div class="row">
        <% data.forEach((col) => { %>
          <div class="col-lg-3 card" style="height: 200px;">
            <img style="width: 100%; padding:4px; margin:0;" src="<%=col.avatar_url%>" alt="">
            <a href="<%=col.html_url%>" target="_blank"><%= col.login %></a>
          </div>
        <% }); %>
      </div>
    </div>

  </div>
</div>

<% include partials/footer %>
